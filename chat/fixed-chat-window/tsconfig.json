    },
    {
      "path": "../input-bar"
    },
    {
      "path": "../leafygreen-chat-provider"
    },
    {
      "path": "../message"
    },
    {
      "path": "../message-feed"
    },
    {
      "path": "../message-prompts"
    }
  ]
}