{
  "extends": "@lg-tools/build/config/package.tsconfig.json",
   "compilerOptions": {
    "declarationDir": "dist",
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@leafygreen-ui/date-picker/*": ["../date-picker/src/*"],
      "@leafygreen-ui/icon/dist/*": ["../icon/src/generated/*"],
      "@leafygreen-ui/*": ["../*/src"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["**/*.spec.*", "**/*.story.*"],
  "references": [
    {
      "path": "../date-picker"
    },
    {
      "path": "../emotion"
    },
    {
      "path": "../lib"
    }
  ]
}
