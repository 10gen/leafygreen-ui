  // "extends": "../../package.tsconfig.json",
  "compilerOptions": {
    "declarationDir": "dist",
    "outDir": "dist",
    "rootDir": "src",
    "module": "esnext",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": false,
    "composite": true, 
    "target": "ES5",
    "jsx": "react",
    "allowJs": false,
    "pretty": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": ".",
  },
  "exclude": [
    "**/*/*.spec.*",
    "**/*/*.story.*"
  ],
  "include": ["src/**/*", "../../typings/*", "typings/**/*"],
