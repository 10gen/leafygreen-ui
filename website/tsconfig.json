{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@leafygreen-ui/*": ["../packages/*"]
    },
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "isolatedModules": true,
    "target": "es5",
    "allowJs": true,
    "strict": false,
    "moduleResolution": "node",
    "module": "esnext"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "components/**/*.tsx",
    "components/live-examples/*.tsx",
    "utils/*.tsx",
    "pages/*.tsx"
  ],
  "exclude": ["node_modules"]
}
