{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "jsx": "react",
    "allowJs": false,
    "pretty": true,
    "declaration": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "traceResolution": true,
    "composite": true,
    "baseUrl": "src"
  },
  "exclude": ["*.story.*", "*.spec.*", "dist"]
}
