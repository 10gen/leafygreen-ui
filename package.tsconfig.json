{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES5",
    "jsx": "react",
    "allowJs": false,
    "pretty": true,
    "declaration": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@leafygreen-ui/*": ["packages/*/src"]
    },
    "noEmit": true,
    "sourceMap": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "importHelpers": false,
    "composite": true
  }
}
