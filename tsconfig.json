{
  "include": ["packages/**/src/**/*", "typings/**/*"],
  "compilerOptions": {
    "module": "system",
    "target": "ES5",
    "jsx": "react",
    "allowJs": false,
    "pretty": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "noEmit": true,
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo",
    "incremental": true
  }
}
