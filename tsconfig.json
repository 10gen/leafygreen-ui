{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "jsx": "preserve",
    "allowJs": false,
    "pretty": true,
    "declaration": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "typeRoots": ["./typings", "./node_modules/@types"]
  },
  "include": ["./packages/**/*", "./typings"]
}
